<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
	  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
	  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>

	<classPathEntry location="ojdbc6.jar" />

	<context id="mysqlTable" targetRuntime="MyBatis3">

		<plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />

		<plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
			<property name="searchString" value="Example$" />
			<property name="replaceString" value="Criteria" /> 
		</plugin>

		<!-- 去掉注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<jdbcConnection driverClass="oracle.jdbc.OracleDriver"
			connectionURL="jdbc:oracle:thin:@10.49.61.115:1521:orcl" userId="xc_iappk_crm" password="123" />

		<javaTypeResolver>
			<property name="forceBigDecimals" value="true" />
		</javaTypeResolver>

		<!--com.xcecs.wifi.dao.model-->
		<javaModelGenerator targetPackage="com.xcecs.wifi.iappk.crm.dao.model"
			targetProject="code">
			<property name="enableSubPackages" value="false" />
			<property name="rootClass" value="com.xcecs.wifi.core.base.CoreEntity" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!--com.xcecs.wifi.dao.mappers-->
		<sqlMapGenerator targetPackage="com.xcecs.wifi.iappk.crm.dao.mappers"
			targetProject="code">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!--com.finstone.house.dao-->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.xcecs.wifi.iappk.crm.dao" targetProject="code">
			<property name="enableSubPackages" value="false" />
			<property name="rootInterface" value="com.xcecs.wifi.core.base.CoreDao" />
		</javaClientGenerator>

		


		<table schema="xc_iappk_crm" tableName="T_LINKS" domainObjectName="Links">
			<property name="ignoreQualifiersAtRuntime" value="true" />
		</table>
	</context>

</generatorConfiguration>

